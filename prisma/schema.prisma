// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String    @id @default(uuid()) @db.Uuid
  email                      String    @unique
  emailVerified              Boolean?  @default(false) @map("email_verified")
  password                   String?   @map("password_hash")
  walletAddress              String?   @unique @map("wallet_address")
  nickname                   String?   @unique
  isAdmin                    Boolean   @default(false) @map("is_admin")
  isBanned                   Boolean   @default(false) @map("is_banned")
  isActive                   Boolean   @default(true) @map("is_active")
  authType                   String    @default("email") @map("auth_type") // 'email' or 'wallet'
  balanceUsd                 Decimal   @default(0.00) @map("balance_usd") @db.Decimal(20, 2)
  ipAddress                  String?   @map("ip_address")
  lastLoginAt                DateTime? @map("last_login_at")
  emailVerificationCode      String?   @map("email_verification_code")
  emailVerificationExpires   DateTime? @map("email_verification_expires")
  createdAt                  DateTime  @default(now()) @map("created_at")
  updatedAt                  DateTime  @default(now()) @updatedAt @map("updated_at")
  
  positions     Position[]
  transactions  Transaction[]
  sessions      Session[]
  
  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Pool {
  id              String    @id @default(cuid())
  address         String
  network         String
  token0Address   String
  token0Symbol    String
  token0Name      String
  token0Decimals  Int
  token1Address   String
  token1Symbol    String
  token1Name      String
  token1Decimals  Int
  fee             Int       // Fee tier in basis points (e.g., 3000 = 0.3%)
  liquidity       String    // Total liquidity
  sqrtPriceX96    String    // Square root price
  tick            Int?      // Current tick
  volumeUSD       Float     @default(0)
  tvlUSD          Float     @default(0)
  txCount         Int       @default(0)
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  positions       Position[]
  dayData         PoolDayData[]
  hourData        PoolHourData[]
  
  @@unique([address, network])
  @@index([network])
  @@index([token0Address])
  @@index([token1Address])
  @@index([tvlUSD])
}

model Position {
  id              String    @id @default(cuid())
  userId          String
  poolId          String
  tokenId         String?   // NFT token ID from Uniswap
  tickLower       Int
  tickUpper       Int
  liquidity       String
  amount0         String    // Amount of token0
  amount1         String    // Amount of token1
  depositedToken0 String    @default("0")
  depositedToken1 String    @default("0")
  withdrawnToken0 String    @default("0")
  withdrawnToken1 String    @default("0")
  collectedFees0  String    @default("0")
  collectedFees1  String    @default("0")
  status          PositionStatus @default(ACTIVE)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  closedAt        DateTime?
  
  user            User      @relation(fields: [userId], references: [id])
  pool            Pool      @relation(fields: [poolId], references: [id])
  transactions    Transaction[]
  
  @@index([userId])
  @@index([poolId])
  @@index([status])
}

model Transaction {
  id              String    @id @default(cuid())
  userId          String
  positionId      String?
  type            TransactionType
  txHash          String?   @unique
  status          TransactionStatus @default(PENDING)
  network         String
  tokenAddress    String?
  tokenSymbol     String?
  amount          String
  amountUSD       Float?
  gasUsed         String?
  gasPrice        String?
  errorMessage    String?
  metadata        Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id])
  position        Position? @relation(fields: [positionId], references: [id])
  
  @@index([userId])
  @@index([positionId])
  @@index([status])
  @@index([type])
}

model PoolDayData {
  id              String    @id @default(cuid())
  poolId          String
  date            DateTime
  volumeUSD       Float     @default(0)
  volumeToken0    Float     @default(0)
  volumeToken1    Float     @default(0)
  tvlUSD          Float     @default(0)
  feesUSD         Float     @default(0)
  txCount         Int       @default(0)
  open            Float     @default(0)
  high            Float     @default(0)
  low             Float     @default(0)
  close           Float     @default(0)
  
  pool            Pool      @relation(fields: [poolId], references: [id])
  
  @@unique([poolId, date])
  @@index([poolId])
  @@index([date])
}

model PoolHourData {
  id              String    @id @default(cuid())
  poolId          String
  timestamp       DateTime
  volumeUSD       Float     @default(0)
  volumeToken0    Float     @default(0)
  volumeToken1    Float     @default(0)
  tvlUSD          Float     @default(0)
  feesUSD         Float     @default(0)
  txCount         Int       @default(0)
  
  pool            Pool      @relation(fields: [poolId], references: [id])
  
  @@unique([poolId, timestamp])
  @@index([poolId])
  @@index([timestamp])
}

enum PositionStatus {
  ACTIVE
  CLOSED
  PENDING
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
  ADD_LIQUIDITY
  REMOVE_LIQUIDITY
  COLLECT_FEES
  SWAP
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
}
